<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount">

    <ImageView
        android:id="@+id/createAccountHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:contentDescription="@string/top_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/main_header" />

    <ImageView
        android:id="@+id/createAccountChin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:contentDescription="@string/top_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/main_header" />

    <Button
        android:id="@+id/createAccountButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/main_button"
        android:contextClickable="false"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:stateListAnimator="@android:anim/accelerate_decelerate_interpolator"
        android:text="@string/sign_up"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/createAccountChin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordCreateAccount2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/createAccountText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/create_account"
        android:textColor="@color/main_color"
        android:textSize="34sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/nameLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAccountHeader" />

    <TextView
        android:id="@+id/createPasswordLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/confirm_password"
        android:textColor="@color/main_color"
        app:layout_constraintBottom_toTopOf="@+id/passwordCreateAccount2"
        app:layout_constraintEnd_toEndOf="@+id/passwordCreateAccount2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordCreateAccount2" />

    <TextView
        android:id="@+id/createPasswordLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/password"
        android:textColor="@color/main_color"
        app:layout_constraintBottom_toTopOf="@+id/passwordCreateAccount1"
        app:layout_constraintEnd_toEndOf="@+id/passwordCreateAccount1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordCreateAccount1" />

    <TextView
        android:id="@+id/userIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/user_id"
        android:textColor="@color/main_color"
        app:layout_constraintBottom_toTopOf="@+id/userIdCreateAccount"
        app:layout_constraintEnd_toEndOf="@+id/userIdCreateAccount"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userIdCreateAccount" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:autofillHints=""
        android:background="@drawable/rectangle_122"
        android:ems="10"
        android:hint="@string/enter_name"
        android:inputType="textShortMessage|textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="16dp"
        android:singleLine="true"
        android:textColorHint="#800B6374"
        app:layout_constraintBottom_toTopOf="@+id/userIdCreateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/userIdCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@drawable/rectangle_122"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textShortMessage|textPassword"
        android:maxLength="30"
        android:maxLines="1"
        android:padding="16dp"
        android:singleLine="true"
        android:textColorHint="#800B6374"
        app:layout_constraintBottom_toTopOf="@+id/createAccountChin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAccountHeader" />

    <EditText
        android:id="@+id/passwordCreateAccount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:autofillHints=""
        android:background="@drawable/rectangle_122"
        android:ems="10"
        android:hint="@string/password_dots"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="#800B6374"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordCreateAccount1"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/passwordCreateAccount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:autofillHints=""

        android:background="@drawable/rectangle_122"
        android:ems="10"
        android:hint="@string/password_dots"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="#800B6374"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userIdCreateAccount" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/top_header"
        app:layout_constraintBottom_toBottomOf="@+id/createAccountHeader"
        app:layout_constraintEnd_toEndOf="@+id/createAccountHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/createAccountHeader"
        app:srcCompat="@drawable/group_1" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/full_name"
        android:textColor="@color/main_color"
        app:layout_constraintBottom_toTopOf="@+id/fullName"
        app:layout_constraintEnd_toEndOf="@+id/fullName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fullName" />

    <ImageView
        android:id="@+id/buttonArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arrow_button"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@+id/createAccountButton"
        app:layout_constraintEnd_toEndOf="@+id/createAccountButton"
        app:layout_constraintHorizontal_bias="0.70"
        app:layout_constraintStart_toStartOf="@+id/createAccountButton"
        app:layout_constraintTop_toTopOf="@+id/createAccountButton"
        app:srcCompat="@drawable/arrow"
        tools:ignore="RedundantDescriptionCheck" />

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:contentDescription="@string/back_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/createAccountHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/createAccountHeader"
        app:layout_constraintTop_toTopOf="@+id/createAccountHeader"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:id="@+id/SignInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account_sign_in"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/createAccountChin"
        app:layout_constraintStart_toStartOf="@+id/createAccountChin"
        app:layout_constraintTop_toTopOf="@+id/createAccountChin" />


</androidx.constraintlayout.widget.ConstraintLayout>